{
	// data path
	"data_folder":"../data/pairs",

	// experiment name
	"exp_name": "nyu-resnet-mse-v4-small",

	// training parameters
	"num_epochs": 150,
	"optimizer": "ADAM",
	"learning_rate": 0.0001,
	"batch_size": 32,
	"loss_type":"MSE",
	"lamda":0.5,
	"num_threads": 5,
	"early_stop_patience": 5,
	"reduce_lr_factor": 0.9,

	// data parameters
	"test_split": 0.2,
	"normalize_depth": false,
	"augment": true,
	"input_size":[228,304,3],

	// model parameters
	"upscale": 2, // 1 to 4
	"bn": true,
	"model_type" : "v4",
	"train_resnet": true, // only last 3 block

	// prediction parameters
	"model_name": "model-a-b.km"
}